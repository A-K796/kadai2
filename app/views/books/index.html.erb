<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th class="title">Title</th>
      <th class="body">Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  		<% @books.each do |book| %>
  	  <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td class="show"><%= link_to "Show", book_path(book.id) %></td>
          <td class="edit"><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td class="destroy"><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "date-confilm" => "本当に削除しますか？" %> </td>
      </tr>
        <% end %>
  </tbody>
</table>







<h2>New book</h2>
<%= render partial: 'books/erro_messages', locals:{book:@book} %>
<%= form_for(@book, url: '/books') do |f| %>
<div class="title">
	<label for="book_title">Title</label>
	<%= f.text_field :title %>
</div>

<div class="body">
	<label for="book_body">Body</label>
	<%= f.text_area :body %>

</div>

<div class="submit">
	<%= f.submit 'Create Book' %>
</div>

<% end %>